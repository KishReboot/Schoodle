<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>
<!-- Simple Home Page -->

<!-- Ability to Create Event -->
<body>
  <main style="margin: 1em;">
    <!-- Create Event Page -->
    <h3>SCHOODLE</h3>
    <h4>Create Event Page</h4>
    <!-- Collect Organizer info and Event info -->
    <form method="POST">
      <div class="form-group mb-2">
        <label for="eventTitle">Event Title.</label>
          <input
          class="form-control"
          type="text"
          name="eventTitle"
          placeholder="Please enter name of your event."
          style="width: 300px; margin: 1em"
          />
      </div>
      <div>
        <label for="eventDesc">Description</label>
          <input
          class="form-control"
          type="text"
          name="eventDesc"
          placeholder="Please enter a description of your event."
          style="width: 300px; margin: 1em"
          />
      </div>
      <div>
        <label for="organizerName">Your name!</label>
          <input
          class="form-control"
          type="text"
          name="organizerName"
          placeholder="Please enter your name."
          style="width: 300px; margin: 1em"
          />
      </div>
      <div>
        <label for="organizerEmail">Your email!</label>
          <input
          class="form-control"
          type="text"
          name="organizerEmail"
          placeholder="Please enter your email."
          style="width: 300px; margin: 1em"
          />
      </div>
      <button class="btn btn-primary">Create Event</button>
      <!-- Attendee Information (will be moved) -->
      <h4>Attendee Info</h4>
      <form method="POST">
        <div class="form-group mb-2">
          <div>
            <label for="visitorName">Your name!</label>
              <input
              class="form-control"
              type="text"
              name="visitorName"
              placeholder="Please enter your name."
              style="width: 300px; margin: 1em"
              />
            </div>
            <div>
              <label for="visitorEmail">Your email!</label>
                <input
                class="form-control"
                type="text"
                name="vistiorEmail"
                placeholder="Please enter your email"
                style="width: 300px; margin: 1em"
                />
            </div>
      <button class="btn btn-primary">Join Event</button>
    </form>
  </main>
</body>
</html>